!!!
%html
  %head
    %title 2toneDL
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Karla:400,700|Duru+Sans'
    = javascript_include_tag 'application'
    = yield :stylesheet
    = csrf_meta_tag

  %body
    %header
      - if signed_in?
        .admin_actions
          = link_to 'sign out', :sign_out
          = link_to '+ add post', :new_blog
      #main
        %a{ href: root_path }
          %h1<>
            2 
            %span<> tone
            DL
        %nav.social_links
          = link_to "Twitter", "http://twitter.com/2toneDL", class: "twitter"
          = link_to "Github", "http://github.com/444c43", class: "github"
        %nav
          = active_link_to "Blog", :blog_home
          = active_link_to "Photos", photos_path
    %section
      = yield
      #disqus_thread
      :javascript
        var disqus_shortname = 'justoneofme';

        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      %noscript
        Please enable JavaScript to view the
        %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.
      %a.dsq-brlink{:href => "http://disqus.com"}
        blog comments powered by
        %span.logo-disqus Disqus
