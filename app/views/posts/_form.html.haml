%article.blog
  = form_for post do |f|
    .field= f.check_box_with_label :published, 'publish?'
    .field= f.text_field :title
    .field= f.text_area :body, onkeypress: "wordCount()"
    .field= select(:tag, :name, options_for_select(["culture", "health", "jacksonville", "technology"]))
    %p#word_count
      Total Words: 0
    .field= f.submit
