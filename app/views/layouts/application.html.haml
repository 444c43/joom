%html
  %head
    %title JustOneOfMe 
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = yield :stylesheet
    = csrf_meta_tag
    %meta(name="viewport" content="width=device-width, initial-scale=1")
  %body
    %header
      - if admin_signed_in?
        .admin_actions
          = link_to 'sign out', :sign_out
          = link_to '+ add post', :new_blog
      #main
        %a{ href: root_path }
        #content
          %article.box.post.post-excerpt
            %header
              %h2
                %a{:href => "#"} Most recent amazing post
              %p Catchy sub-title
            .info
              %span.date
                %span.month
                  Jul
                  %span y
                %span.day 14
                %span.year , 2014
              %ul.stats
                %li
                  %a.icon.fa-comment{:href => "#"} 16
