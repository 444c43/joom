!!!
%html
  %head
    %title JustOneOfMe 
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = yield :stylesheet
    = csrf_meta_tag
    %meta(name="viewport" content="width=device-width, initial-scale=1")
  %body
    - if admin_signed_in?
      .admin_actions
        = link_to 'sign out', :sign_out
        = link_to '+ add post', :new_blog
    = yield
    = render 'layouts/sidebar'
